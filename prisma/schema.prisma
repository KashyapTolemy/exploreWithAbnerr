generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model GalleryImage {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  url      String
  category String
}

model ArticleImage {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  url       String
  articleId String  @db.ObjectId
  article   Article @relation(fields: [articleId], references: [id])
}

model Article {
  id           String         @id @default(auto()) @map("_id") @db.ObjectId
  title        String
  content      String
  ArticleImage ArticleImage[]
}
